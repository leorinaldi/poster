generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// NextAuth.js Models
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model User {
  id                                String                              @id @default(cuid())
  name                              String?
  email                             String?                             @unique
  emailVerified                     DateTime?                           @map("email_verified")
  image                             String?
  accounts                          Account[]
  sessions                          Session[]
  projects                          Project[]
  textSummaries                     TextSummary[]
  imageGenerationRequests           ImageGenerationRequest[]
  characterConsistentImageRequests  CharacterConsistentImageRequest[]

  @@map("users")
}

// Application models
model Project {
  id                               Int                               @id @default(autoincrement())
  name                             String
  description                      String?                           @db.Text
  userId                           String                            @map("user_id")
  user                             User                              @relation(fields: [userId], references: [id], onDelete: Cascade)
  textSummaries                    TextSummary[]
  imageGenerationRequests          ImageGenerationRequest[]
  characterConsistentImageRequests CharacterConsistentImageRequest[]
  createdAt                        DateTime                          @default(now()) @map("created_at")
  updatedAt                        DateTime                          @updatedAt @map("updated_at")

  @@map("projects")
}

model Tool {
  id          Int      @id @default(autoincrement())
  name        String   @unique
  description String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  @@map("tools")
}

model TextSummary {
  id              Int      @id @default(autoincrement())
  projectId       Int      @map("project_id")
  userId          String   @map("user_id")
  name            String?  @db.VarChar(50)
  website         String?  @db.Text
  textToSummarize String?  @map("text_to_summarize") @db.Text
  targetWordCount Int?     @map("target_word_count")
  summary         String?  @db.Text
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("text_summaries")
}

model ImageGenerationRequest {
  id             Int              @id @default(autoincrement())
  projectId      Int              @map("project_id")
  userId         String           @map("user_id")
  name           String?          @db.VarChar(50)
  prompt         String           @db.Text
  numberOfImages Int              @map("number_of_images")
  createdAt      DateTime         @default(now()) @map("created_at")
  updatedAt      DateTime         @updatedAt @map("updated_at")

  project         Project          @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user            User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  generatedImages GeneratedImage[]

  @@map("image_generation_requests")
}

model GeneratedImage {
  id                       Int                    @id @default(autoincrement())
  imageGenerationRequestId Int                    @map("image_generation_request_id")
  imageUrl                 String                 @db.Text
  createdAt                DateTime               @default(now()) @map("created_at")
  updatedAt                DateTime               @updatedAt @map("updated_at")

  imageGenerationRequest ImageGenerationRequest @relation(fields: [imageGenerationRequestId], references: [id], onDelete: Cascade)

  @@map("generated_images")
}

model CharacterConsistentImageRequest {
  id                  Int                                @id @default(autoincrement())
  projectId           Int                                @map("project_id")
  userId              String                             @map("user_id")
  name                String?                            @db.VarChar(50)
  prompt              String                             @db.Text
  referenceImageUrl   String                             @map("reference_image_url") @db.Text
  leonardoImageId     String                             @map("leonardo_image_id") @db.Text
  strengthType        String                             @map("strength_type") @db.VarChar(10)
  modelId             String?                            @map("model_id") @db.Text
  width               Int
  height              Int
  photoReal           Boolean                            @default(true) @map("photo_real")
  alchemy             Boolean                            @default(true)
  numberOfImages      Int                                @default(1) @map("number_of_images")
  createdAt           DateTime                           @default(now()) @map("created_at")
  updatedAt           DateTime                           @updatedAt @map("updated_at")

  project                            Project                             @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user                               User                                @relation(fields: [userId], references: [id], onDelete: Cascade)
  characterConsistentGeneratedImages CharacterConsistentGeneratedImage[]

  @@map("character_consistent_image_requests")
}

model CharacterConsistentGeneratedImage {
  id                                Int                             @id @default(autoincrement())
  characterConsistentImageRequestId Int                             @map("character_consistent_image_request_id")
  imageUrl                          String                          @db.Text @map("image_url")
  createdAt                         DateTime                        @default(now()) @map("created_at")
  updatedAt                         DateTime                        @updatedAt @map("updated_at")

  characterConsistentImageRequest CharacterConsistentImageRequest @relation(fields: [characterConsistentImageRequestId], references: [id], onDelete: Cascade)

  @@map("character_consistent_generated_images")
}

model LeonardoModel {
  id                 Int      @id @default(autoincrement())
  name               String   @unique
  modelId            String   @unique @map("model_id")
  preprocessorId     Int      @map("preprocessor_id")
  photoRealAvailable Boolean  @default(true) @map("photo_real_available")
  photoRealDefault   Boolean  @default(true) @map("photo_real_default")
  photoRealVersion   String   @default("v2") @map("photo_real_version")
  alchemyAvailable   Boolean  @default(true) @map("alchemy_available")
  alchemyDefault     Boolean  @default(true) @map("alchemy_default")
  isActive           Boolean  @default(true) @map("is_active")
  displayOrder       Int      @default(0) @map("display_order")
  createdAt          DateTime @default(now()) @map("created_at")
  updatedAt          DateTime @updatedAt @map("updated_at")

  @@map("leonardo_models")
}
